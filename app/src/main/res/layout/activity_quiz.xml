<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_quiz3">

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="@string/question_text"
        android:fontFamily="@font/baijamjuree_bold"
        android:textColor="#000000"
        android:paddingBottom="16dp"
        android:layout_marginTop="48dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baijamjuree_regular"
            android:text="ตัวเลือก 1" />

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baijamjuree_regular"
            android:text="ตัวเลือก 2" />

        <RadioButton
            android:id="@+id/option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baijamjuree_regular"
            android:text="ตัวเลือก 3" />

        <RadioButton
            android:id="@+id/option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baijamjuree_regular"
            android:text="ตัวเลือก 4" />
    </RadioGroup>

    <!-- LinearLayout แนวนอนสำหรับปุ่ม "Back" และ "Next" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="36dp"
        android:weightSum="1">

        <!-- ปุ่ม "Back" -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_button_text"
            android:fontFamily="@font/baijamjuree_regular"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="168dp"
            android:gravity="center" /> <!-- จัดตัวอักษรให้ตรงกลางปุ่ม -->

        <!-- ปุ่ม "Next" -->
        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baijamjuree_regular"
            android:text="@string/next_button_text"
            android:gravity="center" /> <!-- จัดตัวอักษรให้ตรงกลางปุ่ม -->
    </LinearLayout>

    <Button
        android:id="@+id/finishQuizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baijamjuree_regular"
        android:text="@string/finish_button_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />
</LinearLayout>
